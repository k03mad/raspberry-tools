{
  "name": "raspi-tlgrm-bot",
  "version": "1.0.0",
  "description": "Raspberry Pi 3 Telegram bot",
  "maintainers": [
    "Kirill Molchanov <k03.mad@gmail.com"
  ],
  "repository": "k03mad/raspi-tlgrm-bot",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "colors": "1.2.1",
    "executive": "1.5.12",
    "forever": "0.15.3",
    "got": "8.3.0",
    "jsdom": "11.6.2",
    "node-botmetrics": "1.0.0",
    "node-telegram-bot-api": "0.30.0",
    "require-all": "2.2.0",
    "schedule": "^0.1.0"
  },
  "devDependencies": {
    "eslint": "4.19.0",
    "eslint-config-k03mad": "0.2.5",
    "eslint-plugin-const-case": "1.0.3",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "pre-commit": "1.2.2",
    "pruner-cli": "0.2.1"
  },
  "scripts": {
    "bot": "npm run stop && npm run start",
    "clean": "rm -rf ./node_modules || true",
    "lint": "eslint --report-unused-disable-directives ./ --cache --format codeframe && echo '\n\\033[34mESLinted!\\033[39m\n'",
    "readme": "node app/lib/readme && git add README.md",
    "setup": "npm i && prune",
    "start": "NODE_ENV=production forever start -a --uid raspi --minUptime 5000 --spinSleepTime 60000 -l ../git/raspi-tlgrm-bot/forever.log app/bot.js",
    "stop": "forever stop -t raspi || true"
  },
  "pre-commit": [
    "lint",
    "readme"
  ],
  "license": "MIT"
}
