{
  "name": "raspi-tlgrm-bot",
  "version": "3.0.0",
  "description": "Raspberry Pi 3 Telegram bot",
  "maintainers": [
    "Kirill Molchanov <k03.mad@gmail.com"
  ],
  "repository": "k03mad/raspi-tlgrm-bot",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "app-root-path": "2.0.1",
    "bme-sensor-nolog": "0.1.6",
    "cheerio": "1.0.0-rc.2",
    "colors": "1.2.4",
    "executive": "1.5.13",
    "forever": "0.15.3",
    "got": "8.3.1",
    "moment": "2.22.1",
    "node-telegram-bot-api": "0.30.0",
    "pac-proxy-agent": "3.0.0",
    "require-all": "2.2.0",
    "schedule": "0.1.0"
  },
  "devDependencies": {
    "eslint": "4.19.1",
    "eslint-config-k03mad": "0.2.9",
    "eslint-plugin-const-case": "1.0.4",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "pre-commit": "1.2.2"
  },
  "scripts": {
    "bot": "npm run stop && npm run start",
    "clean": "rm -rf ./node_modules || true",
    "cleanlog": "rm -rf ./forever.log || true",
    "lint": "eslint --report-unused-disable-directives ./ --format codeframe && echo '\n\\033[34mESLinted!\\033[39m\n'",
    "readme": "node app/lib/readme && git add README.md",
    "setup": "npm run cleanlog && npm i",
    "start": "forever start -a --uid raspi --minUptime 5000 --spinSleepTime 60000 -l ../git/raspi-tlgrm-bot/forever.log app/bot.js",
    "stop": "forever stop -t raspi || true"
  },
  "pre-commit": [
    "lint",
    "readme"
  ],
  "license": "MIT"
}
