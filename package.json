{
  "name": "rpi-tools-bot",
  "version": "8.0.0",
  "description": "Raspberry Pi 3 Telegram Bot",
  "maintainers": [
    "Kirill Molchanov <k03.mad@gmail.com"
  ],
  "repository": "k03mad/rpi-tools-bot",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "app-root-path": "2.2.1",
    "forever": "1.0.0",
    "node-telegram-bot-api": "0.30.0",
    "require-all": "3.0.0",
    "socks5-https-client": "1.2.1",
    "utils-mad": "1.7.0"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-k03mad": "2.2.3",
    "eslint-plugin-const-case": "1.0.4",
    "eslint-plugin-jsdoc": "4.8.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-optimize-regex": "1.1.6",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-sort-requires": "2.1.0",
    "eslint-plugin-unicorn": "8.0.1",
    "pre-commit": "1.2.2"
  },
  "scripts": {
    "bot": "npm run stop && npm run start",
    "clean": "rm -rf ./node_modules || true",
    "clean:log": "rm -rf ./forever.log || true",
    "lint": "eslint --report-unused-disable-directives ./ --cache --format codeframe && echo '\n\\033[34mESLinted!\\033[39m\n'",
    "setup": "npm i && npm run clean:log",
    "start": "forever start -a --uid rpibot --minUptime 1000 --spinSleepTime 10000 -l ../git/rpi-tools-bot/forever.log app/bot.js",
    "stop": "forever stop -t rpibot || true"
  },
  "pre-commit": [
    "lint"
  ],
  "license": "Unlicense"
}
